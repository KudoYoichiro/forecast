<!DOCTYPE html>
<html>
<head>
  <title>Forecast</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <meta content="width=device-width, initial-scale=1" name="viewport">
</head>
<body>
	<div class="navbar navbar-inverse" role="navigation">
		<div class="container">
			<div class="navbar-header">
				<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
					<span class="sr-only">Toggle navigation</span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
				</button>
				<%= link_to 'FORECAST', sales_forecasts_path, class: "navbar-brand" %>
			</div>
			<div class="collapse navbar-collapse">
				<ul class="nav navbar-nav navbar-right">
					<li class="dropdown">
						<a href="#" id="settings_drop" role="button" class="dropdown-toggle" data-toggle="dropdown">Settings<span class="caret"></span></a>
						<ul class="dropdown-menu" role="menu" aria-labelledby="settings_drop">
							<li role="presentation"><%= link_to 'SC', service_centers_path, role: "menu_item" %></li>
							<li role="presentation"><%= link_to '客層', segments_path, role: "menuitem" %></li>
							<li role="presentation"><%= link_to '状態', statuses_path, role: "menuitem" %></li>
							<li role="presentation"><%= link_to '地域', areas_path, role: "menuitem" %></li>
							<li role="presentation"><%= link_to '予算', budgets_path, role: "menuitem" %></li>
							<li role="presentation"><%= link_to '確度', certainties_path, role: "menuitem" %></li>
						</ul>
					</li>
				</ul>
			</div><!--/.nav-collapse -->
		</div>
	</div>
	<div class="container">
		<%= yield %>
	</div>
</body>
</html>
