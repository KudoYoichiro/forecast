<p id="notice"><%= notice %></p>

<%= form_tag({ action: :set_database_user }, class: 'form-horizontal', role: 'form') do %>
	<div class="form-group">
		<%= label :database_user, :username, class: 'col-sm-2 control-label' %>
		<div class="col-sm-10">
			<%= text_field :database_user, :username, class: 'form-control', placeholder: 'User name' %>
		</div>
	</div>
	<div class="form-group">
		<%= label :database_user, :password, class: 'col-sm-2 control-label' %>
		<div class="col-sm-10">
			<%= text_field :database_user, :password, class: 'form-control', placeholder: 'Password' %>
		</div>
	</div>
	<%= hidden_field :database_user, :id %>
	<div class="form-group">
		<div class="col-sm-offset-2 col-sm-10">
			<%= submit_tag '登録する', class: "btn btn-default" %>
		</div>
	</div>
<% end %>
