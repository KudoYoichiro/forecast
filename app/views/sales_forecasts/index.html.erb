<h1>Listing sales_forecasts</h1>

<table>
  <thead>
    <tr>
      <th>Service center</th>
      <th>Segment</th>
      <th>Status</th>
      <th>Area</th>
      <th>Company</th>
      <th>Division</th>
      <th>Customer name</th>
      <th>Instrument</th>
      <th>Price</th>
      <th>Budget</th>
      <th>Certainty</th>
      <th>Reporting date</th>
      <th>Fixed date</th>
      <th>Order date</th>
      <th>Agent</th>
      <th>Condition</th>
      <th>Person in charge</th>
      <th>Visible</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sales_forecasts.each do |sales_forecast| %>
      <tr>
        <td><%= sales_forecast.service_center %></td>
        <td><%= sales_forecast.segment %></td>
        <td><%= sales_forecast.status %></td>
        <td><%= sales_forecast.area %></td>
        <td><%= sales_forecast.company %></td>
        <td><%= sales_forecast.division %></td>
        <td><%= sales_forecast.customer_name %></td>
        <td><%= sales_forecast.instrument %></td>
        <td><%= sales_forecast.price %></td>
        <td><%= sales_forecast.budget %></td>
        <td><%= sales_forecast.certainty %></td>
        <td><%= sales_forecast.reporting_date %></td>
        <td><%= sales_forecast.fixed_date %></td>
        <td><%= sales_forecast.order_date %></td>
        <td><%= sales_forecast.agent %></td>
        <td><%= sales_forecast.condition %></td>
        <td><%= sales_forecast.person_in_charge %></td>
        <td><%= sales_forecast.visible %></td>
        <td><%= link_to 'Show', sales_forecast %></td>
        <td><%= link_to 'Edit', edit_sales_forecast_path(sales_forecast) %></td>
        <td><%= link_to 'Destroy', sales_forecast, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

