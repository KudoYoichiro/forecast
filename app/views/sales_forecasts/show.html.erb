<p id="notice"><%= notice %></p>

<table class="table table-bordered forecast_show_table">
	<% if $sc_switch %>
	<tr>
		<td class="show_caption">SC</td>
		<td class="show_data"><%= get_attribute(@sales_forecast.service_center, :name) %></td>
	</tr>
	<% end %>
	<tr>
		<td class="show_caption">客層</td>
		<td class="show_data"><%= get_attribute(@sales_forecast.segment, :name) %></td>
	</tr>
	<tr>
		<td class="show_caption">状態</td>
		<td class="show_data"><%= get_attribute(@sales_forecast.status, :name) %></td>
	</tr>
	<tr>
		<td class="show_caption">地域</td>
		<td class="show_data"><%= get_attribute(@sales_forecast.area, :name) %></td>
	</tr>
	<tr>
		<td class="show_caption">顧客</td>
		<td class="show_data"><%= @sales_forecast.company %></td>
	</tr>
	<tr>
		<td class="show_caption">部署</td>
		<td class="show_data"><%= @sales_forecast.division %></td>
	</tr>
	<tr>
		<td class="show_caption">氏名</td>
		<td class="show_data"><%= @sales_forecast.customer_name %></td>
	</tr>
	<tr>
		<td class="show_caption">機種</td>
		<td class="show_data"><%= @sales_forecast.instrument %></td>
	</tr>
	<tr>
		<td class="show_caption">金額</td>
		<td class="show_data"><%= number_with_delimiter(@sales_forecast.price) %></td>
	</tr>
	<tr>
		<td class="show_caption">予算</td>
		<td class="show_data"><%= get_attribute(@sales_forecast.budget, :name) %></td>
	</tr>
	<tr>
		<td class="show_caption">確度</td>
		<td class="show_data"><%= get_attribute(@sales_forecast.certainty, :name) %></td>
	</tr>
	<tr>
		<td class="show_caption">期待値</td>
		<td class="show_data"><%= number_with_delimiter(expected_value(@sales_forecast.price, get_attribute(@sales_forecast.certainty, :name))) %></td>
	</tr>
	<tr>
		<td class="show_caption">申請時期</td>
		<td class="show_data"><%= @sales_forecast.reporting_date %></td>
	</tr>
	<tr>
		<td class="show_caption">確定時期</td>
		<td class="show_data"><%= @sales_forecast.fixed_date %></td>
	</tr>
	<tr>
		<td class="show_caption">発注時期</td>
		<td class="show_data"><%= @sales_forecast.order_date %></td>
	</tr>
	<tr>
		<td class="show_caption">代理店</td>
		<td class="show_data"><%= @sales_forecast.agent %></td>
	</tr>
	<tr>
		<td class="show_caption">状況</td>
		<td class="show_data"><%= @sales_forecast.condition %></td>
	</tr>
	<tr>
		<td class="show_caption">担当</td>
		<td class="show_data"><%= @sales_forecast.person_in_charge %></td>
	</tr>
	<tr>
		<td class="show_caption">表示</td>
		<td class="show_data"><%= @sales_forecast.visible %></td>
	</tr>
</table>

