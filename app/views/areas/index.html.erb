<h1>地域一覧</h1>

<table>
  <thead>
    <tr>
      <th>地域名</th>
      <th>SC</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @areas.each do |area| %>
      <tr>
        <td><%= area.name %></td>
        <td><%= area.service_centers.map{|service_center| service_center.name}*", " %></td>
		<td><%= link_to '詳細', area %></td>
        <td><%= link_to '編集', edit_area_path(area) %></td>
        <td><%= link_to '削除', area, method: :delete, data: { confirm: '削除しますか?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '新規作成', new_area_path %>
