<h1>Listing certainties</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @certainties.each do |certainty| %>
      <tr>
        <td><%= certainty.name %></td>
        <td><%= link_to 'Show', certainty %></td>
        <td><%= link_to 'Edit', edit_certainty_path(certainty) %></td>
        <td><%= link_to 'Destroy', certainty, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Certainty', new_certainty_path %>
