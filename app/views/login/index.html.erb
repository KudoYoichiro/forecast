<div class="jumbotron login-top">
  <h1>Osaka Forecast</h1>
  
  <div class="login-form">
  	<%= form_tag({ action: :auth }, class: "form-horizontal", role: "form") do %>
  		<div class="form-group">
  			<%= label_tag :username, 'User name', class: "col-sm-2 control-label" %>
  			<div class="col-sm-10">
  				<%= text_field_tag :username, '', class: "form-control", placeholder: "User name" %>
  			</div>
  		</div>
  		<div class="form-group">
  			<%= label_tag :password, "Password", class: "col-sm-2 control-label" %>
  			<div class="col-sm-10">
  				<%= password_field_tag :password, '', class: "form-control", placeholder: "Password" %>
  			</div>
  		</div>
  	
  		<%= hidden_field_tag :referer, flash[:referer] %>
  		<div class="form-group">
  			<div class="col-sm-offset-2 col-sm-10">
  				<%= submit_tag "Sign in", class: "btn btn-default" %>
  			</div>
  		</div>
  	<% end %>
  	
  	<div class="logo-text">JASCO International Co., Ltd</div>
  </div>
</div>

<p style="color: red"><%= @error %></p>